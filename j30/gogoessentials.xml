<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="3.0" group="system" method="upgrade">
    <name>PLG_SYSTEM_GOGOESSENTIALS</name>
    <author>Gogodigital Srls</author>
    <creationDate>2016-05-19</creationDate>
    <copyright>Copyright (C) 2010-2016 Gogodigital Slrs. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>info@gogodigital.it</authorEmail>
    <authorUrl>www.gogodigital.it</authorUrl>
    <version>3.0.0</version>
    <description>System Plugin - Gogodigital Essentials</description>
    <files>
        <filename plugin="gogoessentials">gogoessentials.php</filename>
    </files>
    <languages>
        <language tag="en-GB">languages/en-GB.plg_system_gogoessentials.sys.ini</language>
        <language tag="it-IT">languages/it-IT.plg_system_gogoessentials.sys.ini</language>
    </languages>
    <config>
	<fields name="params">
		<fieldset name="basic">
		</fieldset>
		<fieldset name="security">
		</fieldset>
		<fieldset name="seo">
			<field name="googleAnalytics_id" type="text" size="13"
			    label="PLG_SYSTEM_GOGOESSENTIALS_GANALYTICS_ID_LABEL"
				description="PLG_SYSTEM_GOGOESSENTIALS_GANALYTICS_ID_DESC" />
            <field name="googleAnalytics_admin" type="radio" class="btn-group btn-group-yesno"
                default="0"
                description="PLG_SYSTEM_GOGOESSENTIALS_GANALYTICS_ADMIN_DESC"
                label="PLG_SYSTEM_GOGOESSENTIALS_GANALYTICS_ADMIN_LABEL">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="essentials_ganlytics_hr" type="spacer" hr="true" />
            <field name="googleVerification" type="text"
                   label="PLG_SYSTEM_GOGOESSENTIALS_GOOGLE_VERIFICATION_ID_LABEL"
                   description="PLG_SYSTEM_GOGOESSENTIALS_GOOGLE_VERIFICATION_ID_DESC" />
            <field name="bingVerification" type="text"
                   label="PLG_SYSTEM_GOGOESSENTIALS_BING_VERIFICATION_ID_LABEL"
                   description="PLG_SYSTEM_GOGOESSENTIALS_BING_VERIFICATION_ID_DESC" />
		</fieldset>
		<fieldset name="social">
		</fieldset>
		<fieldset name="template">
		</fieldset>
	</fields>	
    </config>
</extension>
